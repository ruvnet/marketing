{
  "name": "@marketing/ai-swarms",
  "version": "1.0.0",
  "description": "AI Marketing Swarms - 15-agent hierarchical mesh for autonomous media buying",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "start": "node dist/index.js",
    "swarm:start": "node dist/cli/swarm-start.js",
    "swarm:status": "node dist/cli/swarm-status.js"
  },
  "keywords": [
    "ai",
    "marketing",
    "swarm",
    "agents",
    "media-buying",
    "advertising",
    "automation"
  ],
  "author": "ruvnet",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "uuid": "^10.0.0",
    "zod": "^3.23.8",
    "eventemitter3": "^5.0.1",
    "pino": "^9.2.0",
    "p-queue": "^8.0.1",
    "ioredis": "^5.4.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.4",
    "@vitest/coverage-v8": "^2.0.4",
    "eslint": "^9.7.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0"
  }
}
